{
  "compilerOptions": {
    "target": "ES2022",                         
    "module": "NodeNext",                       
    "moduleResolution": "NodeNext",             
    "lib": ["ES2022"],                          
    "outDir": "./dist",                         
    "rootDir": "./src",                         
    "strict": true,                             
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true,                       
    "noImplicitAny": true,                      
    "noUnusedLocals": true,                     
    "noUnusedParameters": true,                 
    "resolveJsonModule": true,                  
    "allowSyntheticDefaultImports": true,       
    "allowJs": true,
    "declaration": true,                        
    "sourceMap": true,                          
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}